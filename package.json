{
  "name": "hamburger",
  "repository": "git://github.com/renli-tech/hamburger.git",
  "private": true,
  "author": "opeabidemi <opeabidemi@gmail.com>",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**/babel**",
      "**/eslint**",
      "**/jest"
    ]
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:meat": "yarn --cwd ./packages/meat expo start --host tunnel ",
    "dev:cheese": "yarn --cwd ./packages/cheese run dev ",
    "dev:recipe": "yarn --cwd ./packages/recipe run dev ",
    "dev:ketchup": "yarn --cwd ./packages/ketchup run dev ",
    "bootstrap": "lerna bootstrap --use-workspaces && yarn hooks:install",
    "fix": "run-s fix:*",
    "fix:code": "yarn lint:code --fix",
    "fix:other": "yarn prettier --write",
    "hooks:uninstall": "husky uninstall",
    "hooks:install": "husky install",
    "lint": "run-p --continue-on-error lint:*",
    "lint:code": "eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .ts,.tsx .",
    "lint:other": "yarn prettier --check",
    "postinstall": "cd ./packages/meat && expo-yarn-workspaces postinstall",
    "prebootstrap": "yarn",
    "prettier": "prettier \"**/*.{md,css,scss,yaml,yml}\"",
    "test": "lerna run --stream test",
    "createGraph": "yarn --cwd ./packages/cheese run ts-node src/cli/createGraph.ts"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/eslint-parser": "7.16.3",
    "@babel/node": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@babel/runtime": "7.16.3",
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@commitlint/config-lerna-scopes": "14.0.0",
    "@types/fs-extra": "9.0.13",
    "@types/inquirer": "8.1.3",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@types/prettier": "2.4.2",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "babel-jest": "27.3.1",
    "babel-loader": "8.2.3",
    "babel-preset-expo": "8.5.1",
    "chalk": "4.1.2",
    "commitlint": "14.1.0",
    "cross-env": "7.0.3",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "10.0.0",
    "husky": "7.0.4",
    "inquirer": "8.2.0",
    "jest": "27.3.1",
    "lerna": "4.0.0",
    "lerna-changelog": "2.2.0",
    "lint-staged": "12.0.2",
    "lodash.camelcase": "^4.3.0",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "prettier-eslint": "13.0.0",
    "rimraf": "3.0.2",
    "rollup": "2.60.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "typedoc": "^0.12.0",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=10.17.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn fix:code"
    ],
    "*.{md,css,scss,yaml,yml}": [
      "yarn fix:other"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions"
  ]
}
